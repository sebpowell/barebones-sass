extends  _inc/_layout.jade

block body
	.main-container
		h1.page-title Mixins
		article.article(id="arrow")
			h2 Arrow
			p Creates a triangle, used for things like tooltips or dropdowns.

			table
				thead
					th(colspan="2") Options
				tr
					td <span class="var">$direction</span>
					td up, down, left, right, top-right, top-left, bottom-right, bottom-left
				tr
					td <span class="var">$color</span>
					td Any hex value (e.g. #E5E5E5)
				tr
					td <span class="var">$size</span>
					td Any px value (e.g. 6px)

			.example

				pre.example-code
					code.language-scss.
						.element {
							&:after {
								@include arrow(down, black, 20px);
							}
						 }

		article.article(id="placeholder")
			h2 Placeholder
			p Changes form placeholder text color.

			.example
				pre.example-code
					code.language-scss.
						.element {
							@include placeholder {
								color: grey;
							}
						}

		article.article(id="uppercase")
			h2 Uppercase
			p Transforms text to uppercase, accepts an argument to specify letter-spacing.

			.example
				pre.example-code
					code.language-scss.
						.element {
							@include uppercase(0.1em);
						}

		article.article(id="clearfix")
			h2 Clearfix
			p Clears floats. Apply this to the parent element.
			pre
				code.language-scss.
					.element {
						@include clearfix;
					 }

		article.article(id="ellipsis")
			h2 Ellipsis
			p Adds ellipsis to limit text width <span class="var">ellipsis($width)<span>

			.example
				pre.example-code
					code.language-scss.
						.element {
							@include text-overflow(300);
						}

		article.article(id="media-queries")
			h2 Media Queries
			p Use <span class="var">if-above($device)</span>, <span class="var">if-below($device)</span> and <span class="var">if-between($device-min, $device-max)</span> to target different viewport sizes defined in your $breakpoints map.

			p These mixins will also accept values that aren't defined in your $breakpoints map.
			.example
				pre.example-code
					code.language-scss.
						.element {
						  @include if-above(device-medium) {
						    color: red;
						  }
						}

						.element {
							@include if-above(800px) {
							color: red;
							}
						}

		article.article(id="strip-units")
			h2 Strip Unit
			p Removes units from a given value - for example, stripping off the 'px' from a pixel value.

			.example
				pre.example-code
					code.language-scss.
						@return strip-units(20px);
						// Returns 20

		article.article(id="convert-to-rem")
			h2 Convert to REM
			p Converts a px based value to REM units. The root value deafults to 16px, unless a different 'base' value is specifed in your <span class="var">$sizes</span> map.

			.example
				pre.example-code
					code.language-scss.
						ul {
							font-size: rem(12px);
							// Converts to 12 / 16 = 0.75rem;
						}

		article.article(id="no-bullet")
			h2 No Bullet
			p Removes list-style-type, margin and padding attributes from ul elements (useful when creating navigation components).

			.example
				pre.example-code
					code.language-scss.
						ul {
							@include no-bullet;
						}
